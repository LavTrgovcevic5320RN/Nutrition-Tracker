<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/savedMealsImgView"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/savedmeal"
            android:tooltipText="@string/saved_meals"
            android:contentDescription="@string/saved_meals"
            android:layout_margin="10dp" />

        <ImageView
            android:id="@+id/StatisticsImgView"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/statistics"
            android:tooltipText="@string/statistics"
            android:contentDescription="@string/statistics"
            android:layout_margin="10dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/mealPlanImgView"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/mealplan"
            android:tooltipText="@string/meal_plan"
            android:contentDescription="@string/meal_plan"
            android:layout_margin="10dp" />

        <ImageView
            android:id="@+id/profileImgView"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/profile"
            android:tooltipText="@string/profile"
            android:contentDescription="@string/profile"
            android:layout_margin="10dp" />

    </LinearLayout>

</LinearLayout>